{
    "version": 2,
    "builds": [
      { "src": "apps/webapp/package.json", "use": "@vercel/next" },
      { "src": "apps/dashboard/package.json", "use": "@vercel/next" },
      { "src": "apps/storefront/package.json", "use": "@vercel/next" }
    ],
    "routes": [
      { "src": "/webapp(/.*)?", "dest": "apps/webapp$1" },
      { "src": "/dashboard(/.*)?", "dest": "apps/dashboard$1" },
      { "src": "/storefront(/.*)?", "dest": "apps/storefront$1" }
    ]
  }